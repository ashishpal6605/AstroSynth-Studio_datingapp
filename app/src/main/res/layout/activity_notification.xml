<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NotificationActivity">


    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/headingbold"
        android:text="Skip"
        android:textColor="@color/primaryColour"
        android:textSize="16sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/img1"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@id/skip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:src="@drawable/notificationimg" />


    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img1"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/headingbold"
        android:gravity="center_horizontal"
        android:text="Enable notificationâ€™s"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/headingregular"
        android:gravity="center_horizontal"
        android:text="Get push-notification when you get the match or receive a message."
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/primaryColour"
        android:fontFamily="@font/headingbold"
        android:text="I want to be notified"
        android:textSize="16sp" />


</RelativeLayout>