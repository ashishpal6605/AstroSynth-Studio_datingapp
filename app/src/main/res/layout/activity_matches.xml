<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MatchesActivity">


    <ImageView
        android:id="@+id/imgview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/matchesimg" />


    <TextView
        android:id="@+id/txtview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgview"
        android:fontFamily="@font/headingbold"
        android:text="Itâ€™s a match, Jake!"
        android:textAlignment="center"
        android:textColor="@color/primaryColour"
        android:textSize="34sp" />


    <TextView
        android:id="@+id/txtview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtview1"
        android:fontFamily="@font/headingregular"
        android:text="Start a conversation now with each other"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/hellobtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtview2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/primaryColour"
        android:text="Say hello"
        android:textSize="16sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hellobtn"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="#ECB1B9"
        android:text="Keep swiping"
        android:textColor="@color/primaryColour"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>