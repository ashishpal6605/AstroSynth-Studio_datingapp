<?xml version="1.0" encoding="utf-8"?><!-- res/layout/view_pager_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/customImageView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/girl1" />

    <TextView
        android:id="@+id/customTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/headingbold"
        android:gravity="center"
        android:text="Custom Text 1"
        android:textColor="@color/primaryColour"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/customTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/headingregular"
        android:gravity="center"
        android:text="Custom Text 2"
        android:textColor="@color/grey"
        android:textSize="14sp" />


</LinearLayout>
